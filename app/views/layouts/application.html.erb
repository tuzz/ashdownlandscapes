<!DOCTYPE html>
<html>
<head>
  <title>Ashdown Landscapes</title>
  <%= favicon_link_tag image_path("favicon.png"), type: "image/png" %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <meta name="viewport" content="width=800">
</head>
<body class="<%= action_name %>">
<div class="content">

<header>
  <h1>Ashdown Landscapes</h1>
</header>

<nav>
  <%= nav_item(about_us_path) %>
  <%= nav_item(photos_path) %>
  <%= nav_item(contact_path) %>
</nav>

<section>
  <%= yield %>
</section>

</div>

<script>track();</script>
</body>
</html>
